<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= name %></title>
    <link rel="stylesheet" href="/static/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
  <div class="container"><br><br>
    <h4>Chat between You & <%= name %></h4>
    <div id="chatArea" >
       <% Data.forEach(element=>{ %>
          <%  if(element.Type=="Send"){ %>
                <span id="send">
                     <%= element.Message %><hr>
                </span>
           <% }else if(element.Type=="Recieved"){ %>
                <span id="recieve">
                    <%= element.Message %><hr>
                </span>
          <%  } %>
     <%   }) %>
    </div><br>
    <form action="/send" method="post">
        <input type="text" name="givenEmail" style="display: none;" value= <%= name %>>
        <input type="text" name="givenTitle" style="display: none;" value="none">
    <div class="mb-3">
        <textarea class="form-control" id="exampleFormControlTextarea1" name="givenMessage" rows="1"></textarea>
      </div>
      <button type="submit" class="btn btn-success">Send</button>
    </form><br>
    <button  class="btn btn-success"><a href="/index" style="text-decoration:none ; color: white;">Back</a></button>
  </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>