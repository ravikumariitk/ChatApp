<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">


    <title>Welcome <%=username%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            background-color: #f4f7f6;
            /* margin-top:20px; */
        }

        .card {
            background: #fff;
            transition: .5s;
            border: 0;
            /* margin-bottom: 30px; */
            border-radius: .55rem;
            position: relative;
            width: 100%;
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 10%);
        }

        .chat-app .people-list {
            width: 280px;
            position: absolute;
            left: 0;
            top: 0;
            padding: 20px;
            z-index: 7
        }

        .chat-app .chat {
            margin-left: 280px;
            border-left: 1px solid #eaeaea
        }

        .people-list {
            -moz-transition: .5s;
            -o-transition: .5s;
            -webkit-transition: .5s;
            transition: .5s
        }

        .people-list .chat-list li {
            padding: 10px 15px;
            list-style: none;
            border-radius: 3px
        }

        .people-list .chat-list li:hover {
            background: #efefef;
            cursor: pointer
        }

        .people-list .chat-list li.active {
            background: #efefef
        }

        .people-list .chat-list li .name {
            font-size: 15px
        }

        .people-list .chat-list img {
            width: 45px;
            border-radius: 50%
        }

        .people-list img {
            float: left;
            border-radius: 50%
        }

        .people-list .about {
            float: left;
            padding-left: 8px
        }

        .people-list .status {
            color: #999;
            font-size: 13px
        }

        .chat .chat-header {
            padding: 15px 20px;
            border-bottom: 2px solid #f4f7f6
        }

        .chat .chat-header img {
            float: left;
            border-radius: 40px;
            width: 40px
        }

        .chat .chat-header .chat-about {
            float: left;
            padding-left: 10px
        }

        .chat .chat-history {
            padding: 20px;
            border-bottom: 2px solid #fff
        }

        .chat .chat-history ul {
            padding: 0
        }

        .chat .chat-history ul li {
            list-style: none;
            /* margin-bottom: 30px */
        }

        .chat .chat-history ul li:last-child {
            margin-bottom: 0px
        }

        .chat .chat-history .message-data {
            margin-bottom: 15px
        }

        .chat .chat-history .message-data img {
            border-radius: 40px;
            width: 40px
        }

        .chat .chat-history .message-data-time {
            color: #434651;
            padding-left: 6px
        }

        .chat .chat-history .message {
            color: #444;
            padding: 18px 20px;
            line-height: 26px;
            font-size: 16px;
            border-radius: 7px;
            display: inline-block;
            position: relative
        }

        .chat .chat-history .message:after {
            bottom: 100%;
            left: 7%;
            border: solid transparent;
            content: " ";
            height: 100vh;
            width: 0;
            position: absolute;
            pointer-events: none;
            border-bottom-color: #fff;
            border-width: 10px;
            margin-left: -10px
        }

        .chat .chat-history .my-message {
            background: #efefef
        }

        .chat .chat-history .my-message:after {
            bottom: 100%;
            left: 30px;
            border: solid transparent;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
            pointer-events: none;
            border-bottom-color: #efefef;
            border-width: 10px;
            margin-left: -10px
        }

        .chat .chat-history .other-message {
            background: #e8f1f3;
            text-align: right
        }

        .chat .chat-history .other-message:after {
            border-bottom-color: #e8f1f3;
            left: 93%
        }

        .chat .chat-message {
            padding: 10px
        }

        .online,
        .offline,
        .me {
            margin-right: 2px;
            font-size: 8px;
            vertical-align: middle
        }

        .online {
            color: #86c541
        }

        .offline {
            color: #e47297
        }

        .me {
            color: #1d8ecd
        }

        .float-right {
            float: right
        }

        .clearfix:after {
            visibility: hidden;
            display: block;
            font-size: 0;
            content: " ";
            clear: both;
            height: 0
        }

        @media only screen and (max-width: 767px) {
            .chat-app .people-list {
                height: 465px;
                width: 100%;
                overflow-x: auto;
                background: #fff;
                left: -400px;
                display: none
            }

            .chat-app .people-list.open {
                left: 0
            }

            .chat-app .chat {
                margin: 0
            }

            .chat-app .chat .chat-header {
                border-radius: 0.55rem 0.55rem 0 0
            }

            .chat-app .chat-history {
                height: 300px;
                overflow-x: auto
            }
        }

        @media only screen and (min-width: 768px) and (max-width: 992px) {
            .chat-app .chat-list {
                height: 650px;
                overflow-x: auto
            }

            .chat-app .chat-history {
                height: 600px;
                overflow-x: auto
            }
        }

        @media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation: landscape) and (-webkit-min-device-pixel-ratio: 1) {
            .chat-app .chat-list {
                height: 480px;
                overflow-x: auto
            }

            .chat-app .chat-history {
                height: calc(100vh - 350px);
                overflow-x: auto
            }
        }
    </style>
</head>

<body>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <div class="" >
        <div class="row " >
            <div class="col-lg-12" >
                <div class="card chat-app">
                    <div id="plist"  style="height: 100vh;overflow: scroll;" class="people-list">
                        <p>Hi! <strong><%=username %> <a href="/">Logout</a></strong></p>
                        <form action="/newchat" method="post">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="New Chat" name="phone" required>
                            </div>
                            <div style="display: none;">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="senderName" value="<%= username %>">
                                    <input type="text" class="form-control" name="senderPhone" value="<%= phone %>">
                                </div>
                            </div>
                            <!-- Hidden submit button, triggered by pressing Enter -->
                            <button type="submit" style="display: none;"></button>
                        </form>
                        <ul class="list-unstyled chat-list mt-2 mb-0" id="side">
                        </ul>
                    </div>

                    <div class="chat">
                        <div class="chat-header clearfix">
                            <div class="row">
                                <% if(data[name]!=undefined){%>
                                    <div class="col-lg-6">
                                        <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                                        </a>
                                        <div class="chat-about">
                                            <h4 class="m-b-0"><%=name.split(',')[1]%></h4>
                                            <div class="status"> <i class="fa fa-phone"></i> <%= name.split(',')[0]%> </div>
                                        </div>
                                    </div>
                                    <%}%>
                               
                            </div>
                        </div>
                        <div style="height: 79vh;overflow: scroll;" class="chat-history" >
                            <ul class="m-b-0" id="chat-history">
                                
                            </ul>
                        </div>
                        <form id="chatForm" action="/newChat" method="post" >
                            <div class="chat-message clearfix">
                                <div class="input-group mb-0">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-send"></i></span>
                                    </div>
                                    <input type="text" class="form-control" id="message" name="message" placeholder="Enter text here...">
                                    <div>
                                        <% if(data[name] != undefined) { %>
                                            <input type="hidden" class="form-control" name="senderName" value="<%= username %>">
                                            <input type="hidden" class="form-control" name="recipientName" value="<%= name.split(',')[1] %>">
                                            <input type="hidden" class="form-control" name="senderPhone" value="<%= phone %>">
                                            <input type="hidden" class="form-control" name="recipientPhone" value="<%= name.split(',')[0] %>">
                                            <input type="hidden" class="form-control" name="type" value="Send">
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <button type="submit"style="display:none;" ></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

document.getElementById('chatForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the default form submission
    var formData = new FormData(this);
    document.getElementById("message").value=""
    // Use Fetch API to send the data asynchronously
    fetch(this.action, {
        method: 'POST',
        body: formData,
    })
    .then(response => response.json()) // Assuming the server returns JSON
    .then(data => {
        console.log('Message sent:', data);
        // Optionally, update the chat UI here
    })
    .catch(error => {
        console.error('Error:', error);
    });
});
    function fetchData() {
    fetch('/real?key=<%=name%>&phone=<%=phone%>&username=<%=username%>')
        .then(response => response.json())
        .then(data => {
            console.log("Fetched data:", data); // Log data to inspect its structure
            if (1) {
                updateUI(data);
            } else {
                console.error('Fetched data is not an array:', data);
            }
        })
        .catch(error => console.error('Error fetching data:', error));
}

const div = document.getElementById('chat-history');

// Function to scroll to the bottom
function scrollToBottom() {
    div.scrollTop = div.scrollHeight;
}

// Call this function when you add new content
scrollToBottom();

// Optionally use a MutationObserver to detect changes and scroll
const observer = new MutationObserver(scrollToBottom);
observer.observe(div, { childList: true, subtree: true });


function updateUI(data) {
    const messagesElement = document.getElementById('chat-history');
    const sideElement= document.getElementById('side');
    sideElement.innerHTML=""
    console.log()
    for(i in data){
        const sideItem = document.createElement('li');
        sideItem.classList.add('clearfix');
        sideItem.innerHTML=`<li class="clearfix">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
                                    <div class="about">
                                        <a class="name" href="/home?key=${i}&phone=<%=phone%>&username=<%=username%>" style="text-decoration: none; color: black;">${i.split(',')[1]}</a>
                                        <div class="status"> <i class="fa fa-phone"></i> ${i.split(',')[0]} </div>
                                    </div>
                                </li>`
        sideElement.appendChild(sideItem);
    }

    messagesElement.innerHTML = ''; // Clear current content
    console.log("printing:",data);
    if("<%=name%>" !=undefined){

    data["<%=name%>"].forEach(element => {
        console.log("Processing element:", element);
        const messageItem = document.createElement('li');
        messageItem.classList.add('clearfix');

        if (element.type === "Send") {
            messageItem.innerHTML = `
                <div class="message-data text-right">
                    <span class="message-data-time">${element.time}</span>
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">
                </div>
                <div class="message other-message float-right">${element.message}</div>
            `;
        } else {
            messageItem.innerHTML = `
                <div class="message-data">
                    <span class="message-data-time">${element.time}</span>
                </div>
                <div class="message my-message">${element.message}</div>
            `;
        }

        messagesElement.appendChild(messageItem);
    });
}
}

// Set the interval to fetch data every 5 seconds (5000 milliseconds)
setInterval(fetchData, 1000);

// Initial call to fetch data as soon as the page loads
fetchData();


    </script>
</body>

</html>